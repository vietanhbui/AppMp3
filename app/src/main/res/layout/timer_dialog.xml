<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:padding="27dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginBottom="21dp"
        android:id="@+id/ll_timer_dialog"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="2"
            android:textSize="23sp"
            android:text="Hẹn giờ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv_timer_dialog"
            android:layout_marginRight="13dp"
            android:text="00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.SwitchCompat
            android:layout_gravity="center"
            android:id="@+id/sc_switch_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_timer_dialog"
            android:paddingTop="5dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:orientation="horizontal"
            android:layout_below="@id/ll_timer_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_weight="1"
                android:id="@+id/r_btn_30"
                android:text="30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/r_btn_60"
                android:text="60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/r_btn_90"
                android:text="90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/r_btn_120"
                android:text="120"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="17dp"
            android:layout_below="@id/rg_timer_dialog"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="19sp"
                android:text="Nhập số phút: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:maxLength="3"
                android:inputType="number"
                android:lines="1"
                android:maxLines="1"
                android:id="@+id/edt_timer"
                android:layout_marginLeft="7dp"
                android:hint="150"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="5dp"
                android:id="@+id/tv_timer_ok"
                android:layout_marginLeft="9dp"
                android:textSize="23sp"
                android:text="OK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>