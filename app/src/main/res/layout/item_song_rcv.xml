<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="11dp"
        android:id="@+id/ll_song"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="11dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_launcher"
            android:id="@+id/imv_avatar_song"
            android:layout_width="51dp"
            android:layout_height="51dp" />

        <LinearLayout
            android:layout_marginRight="11dp"
            android:id="@+id/ll_info_song"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name_song"
                android:text="Tên Bài Hát"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_artist_song"
                android:text="Tên Ca Sĩ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:paddingRight="9dp"
            android:paddingLeft="9dp"
            android:id="@+id/imv_play_next_song"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_play_next"
            android:layout_width="39dp"
            android:layout_height="53dp" />

        <ImageView
            android:paddingRight="9dp"
            android:paddingLeft="9dp"
            android:id="@+id/imv_more_song"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_more"
            android:layout_width="39dp"
            android:layout_height="53dp" />

    </LinearLayout>

</RelativeLayout>