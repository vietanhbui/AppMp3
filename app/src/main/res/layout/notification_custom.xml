<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll_notification"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_weight="1"
        android:paddingLeft="11dp"
        android:id="@+id/rl_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_notification_song"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textSize="17sp"
                android:id="@+id/tv_notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên bài Hát" />

            <TextView
                android:textSize="13sp"
                android:id="@+id/tv_notification_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên ca sĩ" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="11dp"
            android:layout_below="@+id/ll_notification_song"
            android:id="@+id/ll_notification_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginTop="-2dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginRight="9dp"
                android:id="@+id/imv_notification_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#a703f9"
                android:src="@drawable/quantum_ic_skip_previous_white_36" />

            <ImageView
                android:id="@+id/imv_notification_play_pause"
                android:layout_marginRight="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#a703f9"
                android:src="@drawable/quantum_ic_pause_white_24" />

            <ImageView
                android:id="@+id/imv_notification_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#a703f9"
                android:src="@drawable/quantum_ic_skip_next_white_36" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imv_notification_avatar"
        android:paddingRight="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />

    </LinearLayout>

</RelativeLayout>